<%= render "shared/header" %>


  <div class="position-relative" style="top:100px" >
  <%= form_with model: @tweet, url: tweets_path, class: "container", local: true do |f| %>
    <h2 class="mb-4">新規投稿</h2>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="form-group">
      <%= f.label :title, "タイトル" %><br />
      <%= f.text_field :title, placeholder: "タイトルを入力してください", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :text, "メッセージ"%><br />
      <%= f.text_area :text, placeholder: "悩みや困っていることを相談しましょう", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.select :category_id, [ ["悩みの種類を選択してください",1], ["人間関係", 2], ["健康", 3], ["お金",4] , ["子育て",5], ["夫婦仲",6], ["介護",7], ["恋愛",8], ["その他",9] ] %>
    </div>
    <%= f.submit "送信", class:"btn btn-primary mt-3"%>
  <% end %>
  </div>
