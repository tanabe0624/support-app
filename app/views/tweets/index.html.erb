<%= render "shared/header" %>

<main role="main">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="position-relative" style="top:56px" >
      <div class="carousel-inner mb-5">
        <div class="carousel-item active">
          <img src="/images/image1.jpg", class="bd-placeholder-img bd-placeholder-img-lg d-block w-100 blur"  width="1000" height="520">
        </div>
        <div class="carousel-item">
          <img src="/images/image2.jpg", class="bd-placeholder-img bd-placeholder-img-lg d-block w-100 blur"  width="1000" height="520">
        </div>
        <div class="carousel-item">
          <img src="/images/image3.jpg", class="bd-placeholder-img bd-placeholder-img-lg d-block w-100 blur"  width="1000" height="520">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

  <div class="container">
    <div class="row">
    <% @tweets.each do |tweet| %>
    <div class="col-md-4 p-5 mt-5 mb-2 rounded-pill text-dar" style="background-color:#fffafa;">
      <h3><%= tweet.title %></h3>
      <p class="mt-2"><%= truncate(tweet.text, length:30) %></P>
      <ul class="list-inline">
        <%=link_to "/users/#{tweet.user.id}" do%>
          <li class="list-inline-item"><%= tweet.user.nickname %></li>
        <% end %>
          <li class="list-inline-item"><%= tweet.user.age.name%></li>
          <li class="list-inline-item"><%= tweet.user.gender.name%></li>
      </ul>
      <%= link_to "詳しく見る >>", tweet_path(tweet.id), class: 'btn btn-outline-secondary' %>
    </div>
    <% end %>
    </div>
    <%= paginate @tweets %>
  </div>
</main>

<footer class="footer mt-auto py-3 bg-secondary position-relative" style="top:56px" >
      <div class="container">
        <p>always support</p>
      </div>
</footer>
